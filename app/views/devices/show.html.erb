<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col s6 offset-s3">
    <div class="card blue-grey darken-1">
      <div class="card-content white-text">
        <span class="card-title"><%= (@device.name || 'Unnamed') %></span>
        </br>

        <table>
        <tbody>
          <tr>
            <th>MAC Address</th>
            <td><%= @device.mac %></td>
          </tr>
          <tr>
            <th>Last Known IP</th>
            <td><%= @device.last_ip %></td>
          </tr>
          <tr>
            <th>Hostname</th>
            <td><%= @device.last_stats.hostname %></td>
          </tr>
          <tr>
            <th>Memory</th>
            <td><%= @device.last_stats.memory_free %> &#x2F;
            <%= @device.last_stats.memory_total %></td>
          </tr>
          <tr>
            <th>Disk</th>
            <td><%= @device.last_stats.disk_free %> &#x2F;
            <%= @device.last_stats.disk_total %></td>
          </tr>
          <tr>
            <th>Kernel</th>
            <td><%= @device.last_stats.kernel %></td>
          </tr>
          <tr>
            <th>Uptime</th>
            <td><%= @device.last_stats.uptime %></td>
          </tr>
        </tbody>
      </table>
      </div>
    </div>
  </div>
</div>