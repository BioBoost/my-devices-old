<p id="notice"><%= notice %></p>

<h1>Stats</h1>

<table>
  <thead>
    <tr>
      <th>Device</th>
      <th>Disk free</th>
      <th>Disk total</th>
      <th>Memory free</th>
      <th>Memory total</th>
      <th>Update</th>
      <th>Hostname</th>
      <th>Kernel</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @stats.each do |stat| %>
      <tr>
        <td><%= stat.device_id %></td>
        <td><%= stat.disk_free %></td>
        <td><%= stat.disk_total %></td>
        <td><%= stat.memory_free %></td>
        <td><%= stat.memory_total %></td>
        <td><%= stat.update %></td>
        <td><%= stat.hostname %></td>
        <td><%= stat.kernel %></td>
        <td><%= link_to 'Show', stat %></td>
        <td><%= link_to 'Edit', edit_stat_path(stat) %></td>
        <td><%= link_to 'Destroy', stat, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

